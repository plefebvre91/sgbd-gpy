<?php
require_once("include.php");

db_connect();
$s = select_commented_games("Plateforme A");
echo "<table class=\"table table-striped\">";
while($champ = mysql_fetch_array($s)){
  $nom = $champ["nomJeu"];
  $categorie = $champ["nomCategorie"];
  echo "<tr><td>$nom</td><td>$categorie</td></tr>";
}
echo "</table>";
?>